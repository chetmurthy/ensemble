.PHONY: perf rekey

#*************************************************************#

.SUFFIXES: .cmo .cmi .ml .mli
.mli.cmi:
	ocamlc  -c $<
.ml.cmo:
	ocamlc  -g -c $<

#*************************************************************#
all : tools

tools : auxl.cmi auxl.cmo coord.cmi coord.cmo client.cmo\
	perf\throu.cmo perf\latency.cmo perf\rpc.cmo\
	rekey\rekey.cmo\
	test_client.cmo test_rpc_speed.cmo 


