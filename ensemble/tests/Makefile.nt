kill : 
	for i in $(MACH)& do\
	   echo $$i &\
	   ssh $$i "killall ocaml" &\
	   ssh $$i "killall ensembled" &\
	done

#*************************************************************#

client : 
	ocaml client.mls 

try : 	
	ocaml try.mls $(MACH)

uptime : 	
	ocaml uptime.mls $(MACH)

rpc : 
	cd perf& ocaml rpc.mls $(MACH)

throu : 
	cd perf& ocaml throu.mls -lo 4 -hi 4 -step 1 $(MACH)

latency : 
	cd perf& ocaml latency.mls $(MACH)

rekey : 
	cd rekey& ocaml rekey.mls $(MACH)

#*************************************************************#
clean : 
	$(CLEANDIR)	
	$(RM) *\*.cm*

#*************************************************************#
depend :
	ocamldep *.ml *.mli > .depend

include .depend

