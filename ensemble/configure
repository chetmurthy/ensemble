#!/bin/csh -f 

set MACHTYPE=`uname -m`
set OSTYPE=`uname -s`

set ENS_MACHTYPE=""
set ENS_OSTYPE=""

switch ("$MACHTYPE")
       case "Power Macintosh":
            set ENS_MACHTYPE="powerpc";
            breaksw;
       case ppc64:
           set ENS_MACHTYPE="ppc64";
           breaksw;
       case sun4m:
            set ENS_MACHTYPE="sparc";
            breaksw;
       case sun4u:
            set ENS_MACHTYPE="sparc";
            breaksw;
       case i86pc:
            set ENS_MACHTYPE="i386";
            breaksw;
       case i486:
       case i586:
       case i686:
            set ENS_MACHTYPE="i386";
            breaksw;
       default:
         echo Platform not found : $MACHTYPE
         exit 0

endsw

switch ($OSTYPE)
       case Darwin: 
           set ENS_OSTYPE="darwin";
           breaksw;
       case SunOS:
           set ENS_OSTYPE="solaris";
           breaksw;
       case BSD/OS:
           set ENS_OSTYPE="bsdi";
           breaksw;
       case Linux:
           set ENS_OSTYPE="linux";
           breaksw;
       case AIX:
           set ENS_OSTYPE="aix";
           breaksw;
       default:
         echo OS not found : $OSTYPE
         exit 0
endsw

echo "PLATFORM=$ENS_MACHTYPE-$ENS_OSTYPE" > mk/env.mk







